@model IEnumerable<ArticleViewModel>
@{
    ViewData["Title"] = "Recent articles";
}

<div>
    <h2>Most recent titles</h2>
</div>

<div class="articles-list">
    @foreach (var article in this.Model)
    {
        <div class="article-item">
            <div class="article-title">
                <h3>@article.Title</h3>
            </div>
            <div class="article-summary">
                @Html.Raw(article.Summary)
            </div>
            <div class="article-details-link">
                <a asp-action="Details" asp-route-id="@article.Id">
                    See more
                </a>
            </div>
        </div>
    }
</div>